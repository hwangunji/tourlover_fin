<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#fff">

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="384dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tableRow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="14dp"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/backButton2"
            android:layout_width="51dp"
            android:layout_height="41dp"
            android:background="#fff"
            app:srcCompat="?attr/actionModeCloseDrawable" />

        <Space
            android:layout_width="12dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/str_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c996a3"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="384dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow2">

        <Space
            android:layout_width="68dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c996a3"
            android:id="@+id/str_ko"
            android:textSize="20sp" />
    </TableRow>

    <View
        android:id="@+id/divider"
        android:layout_width="384dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="377dp"
        android:layout_height="253dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/test"
        app:layout_constraintBottom_toTopOf="@+id/divider2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <View
        android:id="@+id/divider2"
        android:layout_width="384dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="384dp"
        android:layout_height="441dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Space
                android:layout_width="62dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/elevator_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:src="@drawable/elevator" />

            <Space
                android:layout_width="80dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/slow_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:src="@drawable/slow_load" />

            <Space
                android:layout_width="78dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/toilet_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:src="@drawable/wc" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="22dp">

            <Space
                android:layout_width="63dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/elevator"
                android:layout_width="34dp"
                android:layout_height="wrap_content"
                android:textSize="17sp" />

            <Space
                android:layout_width="76dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/access"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp" />

            <Space
                android:layout_width="83dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/toilet"
                android:layout_width="41dp"
                android:layout_height="wrap_content"
                android:textSize="17sp" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="13dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="13dp">

            <Space
                android:layout_width="13dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="17sp" />
        </TableRow>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="댓글 쓰기"
            android:textSize="18sp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
